---
import Navigation from "../components/Navigation.astro";
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<main class="PageLayout">
	<slot />
	<aside class="PageLayout__title">
		<h1>{title}</h1>
	</aside>

	<Navigation />
</main>

<style lang="scss">
	.PageLayout {
		// padding-left: 144px;
		min-height: 100vh;
		background-color: #181d31;
		position: relative;
		display: flex;

		&__title {
			// h1 {

			height: max-content;
			// background-color: yellow;
			// width: 100%;

			position: fixed;
			bottom: 70%;
			right: 10%;
			user-select: none;

			transform: rotate(-90deg) translateY(-10%);
			transform-origin: top right;
			// z-index: -1;

			// }

			h1 {
				font-family: "Nexa";
				font-style: normal;
				font-weight: 900;
				font-size: 170px;
				line-height: 170px;
				color: #f0e9d288;
				// width: 100%;
				// height: max-content;
			}
		}

		&__rest {
			z-index: 1;
		}
	}
</style>
