---
import Cursor from "../components/Cursor.astro";
import Cursor2 from "../components/Cursor2.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
			rel="stylesheet"
		/>
		<link rel="preload" href="../assets/fonts/Nexa-Heavy.ttf" as="font" />
		<link rel="preload" href="../assets/fonts/Nexa Bold.otf" as="font" />
		<link rel="preload" href="../assets/fonts/Nexa Regular.otf" as="font" />
		<link rel="preload" href="../assets/fonts/Nexa Light.otf" as="font" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div id="smooth-wrapper">
			<div id="smooth-content myPinnedWrapper">
				<slot />
			</div>
		</div>
		<Cursor />
		<Cursor2 />

		<script src="../animations/timeline-animations.ts"></script>
		<script>
			function agentHas(keyword) {
				return (
					navigator.userAgent.toLowerCase().search(keyword.toLowerCase()) > -1
				);
			}

			function isSafari() {
				return (
					(!!window.ApplePaySetupFeature || !!window.safari) &&
					agentHas("Safari") &&
					!agentHas("Chrome") &&
					!agentHas("CriOS")
				);
			}

			// hide custom cursor if the user is using Safari. Cos Safari is annoying.
			if (!isSafari()) {
				console.log("document", document);
				document.body.setAttribute("style", "cursor: none;");
			}
		</script>
	</body>
	<style is:global lang="scss">
		@import "../styles/variables";

		@font-face {
			font-family: "Nexa-Heavy";
			src: url("../assets/fonts/Nexa-Heavy.ttf") format("truetype");
			/* font-weight: 900; */
		}

		@font-face {
			font-family: "Nexa Bold";
			src: url("../assets/fonts/Nexa Bold.otf") format("opentype");
			/* font-weight: 900; */
		}

		@font-face {
			font-family: "Nexa Regular";
			src: url("../assets/fonts/Nexa Regular.otf") format("opentype");
			/* font-weight: 900; */
		}

		@font-face {
			font-family: "Nexa Light";
			src: url("../assets/fonts/Nexa Light.otf") format("opentype");
			/* font-weight: 900; */
		}

		html {
			font-family: "Nexa Regular", Arial, sans-serif;
			background-color: #ffffff;
			// cursor: none;

			body {
			}
		}

		*::selection {
			color: $tertiary_col;
			background-color: #ffffff;
		}

		* {
			padding: 0;
			margin: 0;
			box-sizing: border-box;
			-webkit-text-stroke-color: transparent;
		}

		.imgTile {
			position: absolute;
			top: 10px;
			left: 10px;
			width: 300px;
			opacity: 0;
			transform: translateX(-50%) translateY(-50%);
		}
	</style>
</html>
