export interface Props {}
---

<div class="Cursor"></div>

<script>
	const cursor = document.querySelector(".Cursor");

	document.addEventListener("mouseover", (e) => {
		cursor.setAttribute(
			"style",
			`transform: translate3d(calc(${e.pageX}px - 50%), calc(${e.pageY}px - 50%), 0)`
		);
	});

	document.addEventListener("mousemove", (e) => {
		cursor.setAttribute(
			"style",
			`transform: translate3d(calc(${e.pageX}px - 50%), calc(${e.pageY}px - 50%), 0);`
		);
	});

	document.addEventListener("click", (e) => {
		cursor.classList.add("Cursor--expand");
		setTimeout(() => {
			cursor.classList.remove("Cursor--expand");
		}, 300);
	});
</script>

<style lang="scss">
	@keyframes cursorAnimation {
		from {
			transform: translateX(-50%) translateY(-50%) scale(1);
		}
		to {
			transform: translateX(-50%) translateY(-50%) scale(1.2);
		}
	}

	@keyframes cursorAnimationExpand {
		0% {
			width: 50px;
			height: 50px;
		}
		25% {
			width: 12.5px;
			height: 12.5px;
		}
		50% {
			width: 150px;
			height: 150px;
		}
		100% {
			width: 50px;
			height: 50px;
		}
	}

	.Cursor {
		width: 50px;
		height: 50px;
		border-radius: 50%;
		background-color: transparent;
		mix-blend-mode: exclusion;
		// mix-blend-mode: screen;
		// mix-blend-mode: difference;
		border: 2px solid #98767c;
		position: absolute;
		top: 0;

		display: grid;
		place-items: center;
		transition: all 0.35s ease-out;
		// animation: cursorAnimation 0.5s infinite alternate;
		pointer-events: none;
		z-index: 5000;
		transform-origin: 0%;

		&--expand {
			animation: cursorAnimationExpand 0.5s infinite alternate;
			background-color: transparent;
			border: 1px solid green;
			mix-blend-mode: unset;
		}
	}
</style>
