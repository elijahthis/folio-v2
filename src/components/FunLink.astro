---
const { href } = Astro.props;
---

<a href={href} target="_blank" rel="noopener noreferrer" class="FunLink"
	><slot /></a
>

<style lang="scss">
	@import "../styles/variables";

	.FunLink {
		color: $sec-light;
		transition: all 0.35s;
		text-decoration: none;
		position: relative;

		// pseudo element for underline
		&::after {
			content: "";
			display: block;
			width: 0;
			height: 2px;
			background: $tertiary_col;
			transition: width 0.35s;

			position: absolute;
			bottom: 0;
			left: 0;
		}

		&:hover {
			color: $tertiary_col;

			// pseudo element for underline
			&::after {
				content: "";
				display: block;
				width: 100%;
				height: 2px;
				background: $tertiary_col;
				transition: width 0.35s;
			}
		}
	}
</style>
