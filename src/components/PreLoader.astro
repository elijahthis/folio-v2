<script>
	// imports
	import gsap, { Power1, Power2, Power3, Power4, Bounce } from "gsap";

	const loaderTl = gsap.timeline({ repeat: 0 });

	const BohtTl = gsap.timeline({ repeat: -1 });
	const YuBirdTl = gsap.timeline({ repeat: -1 });

	loaderTl
		.to(".Chihiros_friends__line", {
			width: "100%",
			duration: 0.8,
			ease: Power4.easeIn,
			delay: 1,
		})
		.to(".Boh, .Yu-Bird", {
			opacity: 1,
			duration: 0.75,
			stagger: 0.3,
			ease: Power4.easeIn,
			delay: 0.25,
		})
		.fromTo(
			".PreLoader > .bottomDiv p",
			{ opacity: 0, yPercent: 100, delay: 1.5 },
			{
				opacity: 1,
				yPercent: 0,
				duration: 0.5,
				stagger: 0.1,
				ease: Power2.easeIn,
			},
			">"
		)
		.to(".PreLoader > .Chihiros_friends > *", {
			opacity: 0,
			yPercent: -100,
			duration: 0.5,
			ease: Power4.easeOut,
			delay: 2,
		})
		.to(
			".PreLoader > .bottomDiv p",
			{
				opacity: 0,
				yPercent: -100,
				duration: 0.5,
				// stagger: 0.05,
				ease: Power4.easeOut,
			},
			"<"
		)
		.to(".PreLoader > .bottomDiv", {
			transform: "scale(1, 0)",
			duration: 1,
			ease: Power4.easeOut,
		})
		.to(
			".PreLoader > .Chihiros_friends",
			{
				height: 0,
				duration: 2.5,
				ease: Power4.easeOut,
			},
			"<"
		)
		.to(".PreLoader", {
			height: 0,
			duration: 0.001,
			ease: Power4.easeOut,
		});

	BohtTl.to(".Chihiros_friends > .Boh", {
		yPercent: 10,
		scaleX: 1.12,
		scaleY: 0.8,
		duration: 0.35,
		ease: Power4.easeOut,
	}).to(".Chihiros_friends > .Boh", {
		yPercent: 0,
		scaleX: 1,
		scaleY: 1,
		duration: 0.4,
		ease: Power2.easeOut,
	});

	YuBirdTl.to(".Chihiros_friends > .Yu-Bird", {
		yPercent: -500,
		duration: 0.12,
		// duration: 0.2,
		ease: Power3.easeOut,
	}).to(".Chihiros_friends > .Yu-Bird", {
		yPercent: 0,
		duration: 0.27,
		// duration: 0.27,
		ease: Power2.easeIn,
		delay: 0.15,
	});

	// change time
</script>

