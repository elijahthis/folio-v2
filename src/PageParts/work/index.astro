---
import { isRenderTemplateResult } from "astro/dist/runtime/server/render/astro";
import Button from "../../components/Button.astro";
import PageLayout from "../../layouts/PageLayout.astro";

const workList = [
	{
		title: "Kardinal",
		desc: "Bring everyone together for work by reimagining how they travel, connect, and collaborate. We help businesses create unique, engaging experiences for employees, clients, and partners that drive productivity and connection.",
		link: "https://gokardinal.com",
	},
	{
		title: "Knight Ventures",
		desc: "Bring everyone together for work by reimagining how they travel, connect, and collaborate. We help businesses create unique, engaging experiences for employees, clients, and partners that drive productivity and connection.",
		link: "https://knight.ventures",
	},
	{
		title: "Yeve",
		desc: "Bring everyone together for work by reimagining how they travel, connect, and collaborate. We help businesses create unique, engaging experiences for employees, clients, and partners that drive productivity and connection.",
		link: "https://yeve.co.uk",
	},
];
---

<PageLayout title="work.">
	<div class="workPage">
		<div class="workBoxes">
			{
				workList.map((workItem, ind) => (
					<div class="workBoxes__box">
						<h3>{workItem.title}</h3>
						<div class="workBoxes__box__headerLine" />
						<div class="flexCenter">
							<div class="workBoxes__box__img" />
							<p>{workItem.desc}</p>
							<Button
								onClick={`window.open('${workItem.link}', '_blank')`}
								label="View Live"
							/>
						</div>
					</div>
				))
			}
		</div>
	</div>
</PageLayout>

<style lang="scss">
	@import "../../styles/variables";

	.workPage {
		height: 100vh;
		width: 100%;
		// overflow-y: hidden;

		padding: 0;

		.workBoxes {
			width: 100%;
			height: 100vh;
			// overflow-y: hidden;
			position: relative;

			& > :nth-child(even) {
				background-color: $tertiary_col;
			}

			&__box {
				width: 100vw;
				height: 100vh;
				// border-top-left-radius: 52px;
				// border-top-right-radius: 52px;

				background-color: #d9d9d9;

				position: absolute;
				top: 100%;
				text-align: center;
				// padding: 1rem;

				h3 {
					font-size: 200px;
					line-height: 200px;
					text-align: center;
					padding: 0.5rem 0;
					padding-top: 1.5rem;
				}

				&__headerLine {
					border-bottom: 1px solid;
					width: 0;
				}

				.flexCenter {
					display: flex;
					flex-direction: column;
					align-items: center;
					// gap: 60px;

					padding: 60px;

					& > p {
						margin-top: 50px;
						margin-bottom: 30px;
					}
				}

				&__img {
					width: 609px;
					height: 341px;
					background: #000000;
					box-shadow: 5px 5px 40px #3e4d87;
				}
			}
		}
	}
</style>
