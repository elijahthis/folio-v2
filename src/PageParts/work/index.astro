---
import { isRenderTemplateResult } from "astro/dist/runtime/server/render/astro";
import Button from "../../components/Button.astro";
import PageLayout from "../../layouts/PageLayout.astro";

const workList = [
	{
		title: "Kardinal",
		desc: "Bring everyone together for work by reimagining how they travel, connect, and collaborate. We help businesses create unique, engaging experiences for employees, clients, and partners that drive productivity and connection.",
		link: "https://gokardinal.com",
		images: [
			"/images/kardinal-1.webp",
			"/images/kardinal-2.webp",
			"/images/kardinal-3.webp",
			"/images/kardinal-4.webp",
			"/images/kardinal-5.webp",
			"/images/kardinal-6.webp",
		],
	},
	{
		title: "Knight Ventures",
		desc: "Bring everyone together for work by reimagining how they travel, connect, and collaborate. We help businesses create unique, engaging experiences for employees, clients, and partners that drive productivity and connection.",
		link: "https://knight.ventures",
		images: [
			"/images/kv-1.webp",
			"/images/kv-2.webp",
			"/images/kv-3.webp",
			"/images/kv-4.webp",
		],
	},
	{
		title: "Yeve",
		desc: "Bring everyone together for work by reimagining how they travel, connect, and collaborate. We help businesses create unique, engaging experiences for employees, clients, and partners that drive productivity and connection.",
		link: "https://yeve.co.uk",
		images: [
			"/images/yeve-1.webp",
			"/images/yeve-2.webp",
			"/images/yeve-3.webp",
			"/images/yeve-4.webp",
			"/images/yeve-5.webp",
			"/images/yeve-6.webp",
			"/images/yeve-7.webp",
			"/images/yeve-8.webp",
			"/images/yeve-9.webp",
			"/images/yeve-10.webp",
		],
	},
];
---

<PageLayout title="work.">
	<div class="workPage">
		<div class="workBoxes">
			{
				workList.map((workItem, ind) => (
					<div class="workBoxes__box">
						<h3>{workItem.title}</h3>
						<div class="workBoxes__box__headerLine" />
						<div class="flexCenter">
							<div class="workBoxes__box__images">
								<div class="workBoxes__box__images__inner">
									{workItem.images.map((imageItem) => (
										<img src={imageItem} alt="" />
									))}
								</div>
							</div>
							<p>{workItem.desc}</p>
							<Button
								onClick={`window.open('${workItem.link}', '_blank')`}
								label="View Live"
							/>
						</div>
					</div>
				))
			}
		</div>
	</div>
</PageLayout>

<style lang="scss">
	@import "../../styles/variables";

	.workPage {
		height: 100vh;
		width: 100%;
		// overflow-y: hidden;

		padding: 0;

		.workBoxes {
			width: 100%;
			height: 100vh;
			// overflow-y: hidden;
			position: relative;

			& > :nth-child(even) {
				background-color: $tertiary_col;
			}

			&__box {
				width: 100vw;
				height: 100vh;
				// border-top-left-radius: 52px;
				// border-top-right-radius: 52px;

				background-color: #d9d9d9;

				position: absolute;
				top: 100%;
				text-align: center;
				// padding: 1rem;

				h3 {
					font-size: 200px;
					line-height: 200px;
					text-align: center;
					padding: 0.5rem 0;
					padding-top: 1.5rem;
				}

				&__headerLine {
					border-bottom: 1px solid;
					width: 0;
				}

				.flexCenter {
					display: flex;
					flex-direction: column;
					align-items: center;
					// gap: 60px;

					& > p {
						margin-top: 50px;
						margin-bottom: 30px;
						padding: 0 2rem;
					}
				}

				&__images {
					width: 100%;
					height: calc(66vh - 112px);
					background: #000000;
					// margin-top: 1rem;

					background-repeat: no-repeat;
					background-size: cover;
					// overflow-x: scroll;
					overflow-x: hidden;
					position: relative;

					&__inner {
						display: flex;
						flex-direction: row;
						align-items: center;
						gap: 1rem;

						height: 100%;
						padding: 0 2rem;

						position: absolute;
						left: 100%;
						right: auto;

						& > img {
							height: 80%;
						}
					}
				}
			}
		}
	}
</style>
