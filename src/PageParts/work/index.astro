---
import { isRenderTemplateResult } from "astro/dist/runtime/server/render/astro";
import Button from "../../components/Button.astro";
import PageLayout from "../../layouts/PageLayout.astro";

const workList = [
	{
		title: "Kardinal",
		desc: "Book and manage flights, car trips and other experiences for your business. Bring everyone together for work by reimagining how they travel, connect, and collaborate.",
		link: "https://gokardinal.com",
		images: [
			"https://res.cloudinary.com/dywp91yx7/image/upload/f_auto,q_auto/v1/folio-v2/kardinal-1",
			"https://res.cloudinary.com/dywp91yx7/image/upload/f_auto,q_auto/v1/folio-v2/kardinal-2",
			"https://res.cloudinary.com/dywp91yx7/image/upload/f_auto,q_auto/v1/folio-v2/kardinal-3",
			"https://res.cloudinary.com/dywp91yx7/image/upload/f_auto,q_auto/v1/folio-v2/kardinal-4",
			"https://res.cloudinary.com/dywp91yx7/image/upload/f_auto,q_auto/v1/folio-v2/kardinal-5",
			"https://res.cloudinary.com/dywp91yx7/image/upload/f_auto,q_auto/v1/folio-v2/kardinal-6",
		],
	},
	{
		title: "Knight Ventures",
		desc: "Knight Ventures is a Pan Africa Digital Accelerator providing a platform to connect startups, mentors and investors, with a mission to develop 100 high-growth tech-enabled startups to scale and success.",
		link: "https://knight.ventures",
		images: [
			"https://res.cloudinary.com/dywp91yx7/image/upload/f_auto,q_auto/v1/folio-v2/kv-1",
			"https://res.cloudinary.com/dywp91yx7/image/upload/f_auto,q_auto/v1/folio-v2/kv-2",
			"https://res.cloudinary.com/dywp91yx7/image/upload/f_auto,q_auto/v1/folio-v2/kv-3",
			"https://res.cloudinary.com/dywp91yx7/image/upload/f_auto,q_auto/v1/folio-v2/kv-4",
		],
	},
	{
		title: "Yeve",
		desc: "From extravagant, large-scale parties to small, intimate celebrations - plan, track and execute unforgettable events and experiences by connecting with leading talents and service providers on the Yeve platform.",
		link: "https://yeve.co.uk",
		images: [
			"https://res.cloudinary.com/dywp91yx7/image/upload/f_auto,q_auto/v1/folio-v2/yeve-1",
			"https://res.cloudinary.com/dywp91yx7/image/upload/f_auto,q_auto/v1/folio-v2/yeve-2",
			"https://res.cloudinary.com/dywp91yx7/image/upload/f_auto,q_auto/v1/folio-v2/yeve-3",
			"https://res.cloudinary.com/dywp91yx7/image/upload/f_auto,q_auto/v1/folio-v2/yeve-4",
			"https://res.cloudinary.com/dywp91yx7/image/upload/f_auto,q_auto/v1/folio-v2/yeve-5",
			"https://res.cloudinary.com/dywp91yx7/image/upload/f_auto,q_auto/v1/folio-v2/yeve-6",
			"https://res.cloudinary.com/dywp91yx7/image/upload/f_auto,q_auto/v1/folio-v2/yeve-7",
			"https://res.cloudinary.com/dywp91yx7/image/upload/f_auto,q_auto/v1/folio-v2/yeve-8",
			"https://res.cloudinary.com/dywp91yx7/image/upload/f_auto,q_auto/v1/folio-v2/yeve-8",
			"https://res.cloudinary.com/dywp91yx7/image/upload/f_auto,q_auto/v1/folio-v2/yeve-10",
		],
	},
];
---

<PageLayout title="work." className="WorkWrapper">
	<div class="workPage">
		<div class="workBoxes">
			{
				workList.map((workItem, ind) => (
					<div
						class={`workBoxes__box workBoxes__box${ind + 1}`}
						id={ind === 0 && "work"}
					>
						<div class="workBoxes__box__top">
							<div class="workCount">
								<span>#{ind + 1}</span>
							</div>
							<h3>{workItem.title}</h3>
						</div>
						<div class="flexCenter">
							<div class="workBoxes__box__images">
								<div class="workBoxes__box__images__inner">
									<div>
										{[...workItem.images, ...workItem.images].map(
											(imageItem) => (
												<img src={imageItem} alt="" />
											)
										)}
									</div>
								</div>
							</div>
							<div class="bottomInfo">
								<p class="bottomInfo__desc">{workItem.desc}</p>
								<div class="bottomInfo__role">
									<h5>ROLE</h5>
									<div>
										<p>Web Development</p>
										<p>Performance Optimization</p>
									</div>
									<Button
										onClick={`window.open('${workItem.link}', '_blank')`}
										label="View Live"
									/>
								</div>
							</div>
						</div>
					</div>
				))
			}
		</div>
	</div>
</PageLayout>

<style lang="scss">
	@import "../../styles/variables";

	.workPage {
		height: 100vh;
		width: 100%;
		// overflow-y: hidden;

		padding: 0;

		.workBoxes {
			width: 100%;
			height: 100vh;
			// overflow-y: hidden;
			position: relative;

			&__box {
				width: 100vw;
				height: 100vh;
				// border-top-left-radius: 52px;
				// border-top-right-radius: 52px;

				background-color: #d9d9d9;

				position: absolute;
				top: 100%;
				text-align: center;
				// padding: 1rem;
				color: $main_dark;

				&__top {
					display: flex;
					flex-direction: row;
					align-items: center;
					gap: 1rem;
					justify-content: space-between;
					padding: 0.5rem $horizontal-padding;
					padding-top: 1.5rem;
					overflow-y: hidden;

					h3 {
						font-size: 80px;
						line-height: 80px;
						position: relative;
						text-align: right;
					}

					.workCount {
						font-weight: 400;
						font-size: 50px;
						line-height: 64px;
						text-align: left;

						& > span {
							margin: auto 0;
						}
					}
				}

				.flexCenter {
					display: flex;
					flex-direction: column;
					align-items: stretch;
					// gap: 60px;
				}

				.bottomInfo {
					margin-top: 50px;
					margin-bottom: 30px;
					padding: 0 $horizontal-padding;

					display: flex;
					flex-direction: row;
					align-items: flex-start;
					justify-content: space-between;
					text-align: left;

					&__desc {
						width: 40vw;

						font-size: 1.125rem;
						font-weight: 500;
					}

					&__role {
						h5 {
							font-size: 1rem;
							line-height: 1.2rem;
							margin-bottom: 0.5rem;
						}

						& > div {
							margin-bottom: 1.2rem;
							font-size: 1rem;
						}
					}
				}

				&__images {
					width: 100%;
					height: calc(66vh - 112px);
					background: $main_dark;
					// margin-top: 1rem;

					background-repeat: no-repeat;
					background-size: cover;
					// overflow-x: scroll;
					overflow-x: hidden;
					// position: relative;
					padding: 0 2rem;

					&__inner {
						height: 100%;
						width: max-content;

						// position: absolute;
						// left: 100%;
						// right: auto;

						& > div {
							height: 100%;
							display: flex;
							flex-direction: row;
							align-items: center;
							gap: 1rem;

							& > img {
								height: 80%;
							}
						}
					}
				}
			}
		}
	}

	@media screen and (max-width: 768px) {
		.workPage {
			height: 100vh;
			width: 100%;
			// overflow-y: hidden;

			padding: 0;

			.workBoxes {
				&__box {
					width: 100vw;
					height: 100vh;
					// border-top-left-radius: 52px;
					// border-top-right-radius: 52px;

					background-color: #d9d9d9;

					position: absolute;
					top: 100%;
					text-align: center;
					// padding: 1rem;

					&__top {
						padding: 0.5rem $horizontal-padding-mobile;
						padding-top: 1rem;

						h3 {
							font-size: 2rem;
							line-height: 2rem;
						}
						.workCount {
							font-weight: 400;
							font-size: 2rem;
							line-height: 2.5rem;
						}
					}

					.bottomInfo {
						margin-top: 50px;
						margin-bottom: 30px;
						padding: 0 $horizontal-padding-mobile;

						display: flex;
						flex-direction: column;
						align-items: stretch;
						justify-content: unset;
						gap: 2rem;
						text-align: left;

						&__desc {
							width: 100%;

							font-size: 1rem;
							font-weight: 500;
							// opacity: 0;
						}

						&__role {
							h5 {
								font-size: 0.75rem;
								line-height: 0.85rem;
								margin-bottom: 0.5rem;
							}

							& > div {
								font-size: 0.75rem;
								margin-bottom: 1rem;
							}
						}
					}

					&__images {
						width: 100%;
						height: clamp(360px, 100vw, calc(66vh - 112px));
						background: #000000;
						// margin-top: 1rem;

						background-repeat: no-repeat;
						background-size: cover;
						// overflow-x: scroll;
						overflow-x: hidden;
						// position: relative;
						padding: 0 2rem;

						&__inner {
							height: 100%;
							width: max-content;

							// position: absolute;
							// left: 100%;
							// right: auto;

							& > div {
								height: 100%;
								display: flex;
								flex-direction: row;
								align-items: center;
								gap: 1rem;

								& > img {
									height: 80%;
								}
							}
						}
					}
				}
			}
		}
	}
</style>
